<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="ko" lang="ko">
<title>주문 리스트</title>
<head>
    <%- partial('../common/header_mobile.ejs') %>

</head>
<body>
<div id="wrap">

    <%

    if(data.length == 0)
    {
    %>
    <div class = "order_item">


        <!-- 주문 내용 -->
        <div class = "order_content_box">
            <div class = "order_content">
            주문 내역이 없습니다.
            </div>
        </div>


    </div>

    <div class = "dash"></div>
    <%
    }else
    {
        for(var i = 0 ; i < data.length ; i++)
        {
            var obj = data[i];
            var content = obj.content;
            var regdate = obj.regdate;
            var phonenb = obj.phonenb;
            var address = obj.address;
         //   var now = moment().format('YYYY-MM-DD HH:mm');
          //  var minute = moment(regdate, 'YYYY-MM-DD HH:mm').diff(now, 'minute');


    %>
    <div class = "order_item">
        <!-- 주문 내역 -->
        <div class = "pad10lr">
            <div class = "order_header">
                <div class = "order_header_phone"><%=phonenb%><span class = "order_header_time"><%=regdate%>분전</span></div>
            </div>
        </div>

        <!-- 주문 내용 -->
        <div class = "order_content_box">
            <div class = "order_content">
            <span class = "order_content_text"><%=content%><br/><br/><br/> 주소 : <%=address%></span>
            </div>
        </div>

        <!-- 주문 상태 버튼 -->
        <div class = "pad10l pad10r mg10t">
            <div class = "order_btn">
                <div class = "order_btn_text">확인</div>
            </div>
        </div>
    </div>

    <div class = "dash"></div>
    <%
    }
    }
    %>



</div><!-- (e) #wrap -->
</body>
</html>